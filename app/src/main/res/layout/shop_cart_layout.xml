<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/cl_bill_detail">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_remove"
            android:id="@+id/iv_remove" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="106dp"
            android:layout_height="106dp" app:srcCompat="@drawable/logo"
            android:id="@+id/iv_product" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toEndOf="@+id/iv_remove"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_name" app:layout_constraintStart_toEndOf="@+id/iv_product"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" android:textSize="16sp" android:textColor="@color/smokyBlack"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_price" app:layout_constraintStart_toEndOf="@+id/iv_product"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name" android:textSize="16sp"
            android:textColor="@color/smokyBlack"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_qtty" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv_product" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_price" android:textSize="16sp"
            android:textColor="@color/smokyBlack"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_totalCost"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="74dp"
            android:textColor="@color/smokyBlack" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>