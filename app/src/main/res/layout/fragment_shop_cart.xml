<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".views.ShopCartFragment" android:id="@+id/cl_bill_detail"
                                             android:background="@color/darkSkyBlue">
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="100dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/slateGray"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/btn_buy" android:id="@+id/constraintLayout">

        <TextView
                android:text="@string/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_shop_cart_total" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="32sp" android:textColor="@color/smokyBlack"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/rv_shop_cart"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout">
    </android.support.v7.widget.RecyclerView>
    <Button
            android:text="@string/shop"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:id="@+id/btn_buy" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="28sp" android:textAllCaps="false"
            android:drawableStart="@drawable/ic_shop" android:background="@color/darkPurple"
            android:textColor="@color/slateGray" android:paddingLeft="64dp" android:paddingRight="64dp"/>
</android.support.constraint.ConstraintLayout>