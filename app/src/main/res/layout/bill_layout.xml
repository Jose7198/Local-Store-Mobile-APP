<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/cl_bills">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_money"
            android:id="@+id/imageView4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="48dp"/>
    <TextView
            android:text="@string/billsNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_id" app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginStart="32dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textColor="@color/smokyBlack"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date" app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/tv_id"
            android:layout_marginTop="8dp" android:textSize="18sp" android:textColor="@color/smokyBlack"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" android:textSize="18sp" android:textColor="@color/smokyBlack"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_next_bill"
            android:id="@+id/imageView5" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"/>
</android.support.constraint.ConstraintLayout>